<?xml version="1.0"?>
<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <update handle="customer_account"/>
    <head>
        <title>Personal Discount Requests List</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="oleksandrk.personal.discount.request.list"
                   template="Oleksandrk_RegularCustomer::customer/account/request_list.phtml"
                   cacheable="false">
                <arguments>
                    <argument name="view_model" xsi:type="object">Oleksandrk\RegularCustomer\ViewModel\Customer\RequestList</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
