<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Oleksandrk\RegularCustomer\Block\Link" name="regular-top-link">
                <arguments>
                    <argument name="sortOrder" xsi:type="number">40</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="regular-customer-form-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Loyalty Program For Regular Customers</argument>
                    <argument name="path" xsi:type="string">regular_customer/request/form</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
